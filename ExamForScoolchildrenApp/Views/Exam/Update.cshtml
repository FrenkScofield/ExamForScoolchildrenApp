@model ExamForScoolchildrenApp.Domain.ViewModels.ExamViewModel

<h2> İmtahani Güncelleyin</h2>

<div class="card-header py-4">
    <a asp-action="Index" class="float-right btn btn-outline-secondary"> Ana SəhifəGeri Git</a>
</div>
<section>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <form asp-action="Update" method="post">
                    <div class="form-group">
                        <label for="sel1" class="form-label">Dərsin kodu</label>
                        <select class="form-select" id="sel1" asp-for="@Model.Exam.LessonId">
                            @foreach (var item in Model.Lessons)
                            {
                                <option value="@item.Id">@item.Id</option>

                            }

                        </select>
                    </div>
                    <div class="form-group">
                        <label for="sel1" class="form-label">Şagirdin nömrəsi</label>
                        <select class="form-select" id="sel2" asp-for="@Model.Exam.StudentId">
                            @foreach (var item in Model.Students)
                            {
                                <option value="@item.Id">@item.Id</option>

                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="İmtahan tarixi ">İmtahan tarixi </label>
                        <input type="datetime-local" id="party" class="form-control" asp-for="@Model.Exam.ImtahanTarixi" required>
                    </div>
                    <div class="form-group">
                        <label for="Qiyməti">Qiyməti</label>
                        <input type="text" class="form-control" asp-for="@Model.Exam.Qiymeti" required>
                    </div>
                    <br />
                    <button type="submit" style="float:right" class="btn btn-primary">Güncelleyin</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
