@model IEnumerable<ExamForScoolchildrenApp.Domain.Entities.Student>

<h1>Şagirdlər</h1>
<div class="card-header py-4">
    <a asp-action="Create" class="float-right btn btn-outline-secondary">Yeni Şagird Əlavə Et</a>
</div>
<section>
    <div class="container">
        <div class="row">
            <div class="col-8">
<div class="table-responsive">
    <table class="table table-bordered table-striped table-shorting">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Nömrəsi </th>
                <th>Sinifi </th>
                <th>Yenile  -  Sil </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentName</td>
                    <td>@student.StudentSurname</td>
                    <td>@student.Id.ToString()</td>
                    <td>@student.StudentClassNum</td>
                    <td>
                        <div style="display:flex">

                            <a asp-controller="Student" asp-action="Update" style="margin: 5px 0px 0px 15px;" class="fas fa-fw fa-pencil-alt updateBtn btnForm" asp-route-id="@student.Id"></a>

                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn text-danger" onclick="return confirm('Silmək istədiğinizdən əminmisiniz?')" style=" padding: 1px 0.75rem; margin-left: 11px"><i class="fas fa-fw fa-trash"></i></a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
            </div>
        </div>
    </div>
</section>